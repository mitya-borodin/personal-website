{
  "version": "1.0.0",
  "configurations": [
    {
      "name": "Remote",
      "request": "attach",
      "address": "127.0.0.1",
      "port": 9229,
      "localRoot": "/app",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Nodemon",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector"
    }
  ]
}
